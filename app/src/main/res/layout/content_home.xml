<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.finance.personal.vitt.HomeActivity"
    android:background="#3ae5e8"
    tools:showIn="@layout/app_bar_home">

    <FrameLayout
        android:id="@+id/content_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
    </FrameLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingadd"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginStart="300sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/stat_notify_more" />


        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="50sp"
            android:text="Total Amount:"
            android:textSize="15sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="70dp"
            android:text="Exp. Limit:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="90dp"
            android:text="Amount Left:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/amttotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="50sp" />

        <TextView
            android:id="@+id/amtlimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="70sp" />

        <TextView
            android:id="@+id/amtleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190sp"
            android:layout_marginTop="90sp" />


    <TextView
        android:id="@+id/dttext"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:background="#FFFFFF"
        android:layout_marginTop="16dp"
        />
</RelativeLayout>
